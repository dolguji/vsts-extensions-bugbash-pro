{
    "manifestVersion": 1,
    "id": "bugbashpro",
    "version": "2.0.2",
    "name": "Bug Bash Pro",
    "description": "Easier way to manage bug bashes",
    "publisher": "mohitbagra",
    "icons": {
        "default": "img/logo.png"
    },
    "scopes": [
    	"vso.work",
        "vso.work_write",
        "vso.profile",
        "vso.code",
        "vso.code_write"
	 ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        }
    ],
    "tags": [
        "Work Item",
        "Collaborate",
        "Bug",
        "Bug bash"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/mohitbagra/vsts-extensions-bugbash-pro"
    },    
    "branding": {
        "color": "#106ebe",
        "theme": "dark"
    },    
    "categories": [
        "Collaborate"
    ],
    "files": [
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "css",
            "addressable": true
        },
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "README.md",
            "addressable": true
        }
    ],
    "contributions": [        
        {
            "id": "bugbash-hub",
            "type": "ms.vss-web.hub",
            "description": "Bug bash manager work item hub",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Bug Bash Pro",
                "uri": "index.html"
            }
        }
    ]
}
